{
  "name": "pugsassbase",
  "version": "1.0.0",
  "description": "```sh npm init ```",
  "main": "index.html",
  "scripts": {
    "start": "run-p watch/*",
    "sass": "sass --no-source-map source/sass:doc/css",
    "pug": "pug ./source/pug --out ./doc --pretty",
    "watch/sass": "watch 'npm run sass' ./source/sass",
    "watch/pug": "watch 'npm run pug' ./source/pug"
  },
  "author": "maymo3",
  "license": "MIT",
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "pug": "^3.0.2",
    "pug-cli": "^1.0.0-alpha6",
    "sass": "^1.50.0",
    "watch": "^0.13.0"
  }
}
